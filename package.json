{
  "name": "assistant-code-ai",
  "displayName": "assistant-code-ai",
  "description": "",
  "version": "0.0.2",
  "publisher": "Assistant-AI",
  "engines": {
    "vscode": "^1.89.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rakeshkumar1019/assistant-ai.git"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "assistant.showWebViewUi",
        "title": "Settings",
        "icon": "media/settings-icon.svg"
      },
      {
        "command": "assistant.newChat",
        "title": "New Chat",
        "icon": "media/add-icon.svg"
      },
      {
        "command": "assistant.showPrReview",
        "title": "PR Review",
        "icon": "media/pr-icon.svg"
      },
      {
        "command": "assistant.loginToGithub",
        "title": "Login to GitHub",
        "icon": "media/github-icon.svg"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chat-ui",
          "title": "AI Assistant",
          "icon": "media/chat-icon.svg"
        }
      ]
    },
    "views": {
      "chat-ui": [
        {
          "type": "webview",
          "id": "chatUI.chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "assistant.showWebViewUi",
          "when": "view == chatUI.chatView",
          "group": "navigation"
        },
        {
          "command": "assistant.newChat",
          "when": "view == chatUI.chatView",
          "group": "navigation"
        },
        {
          "command": "assistant.showPrReview",
          "when": "view == chatUI.chatView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "debug": "cd webview-ui && npm run build && cd .. && npm run compile",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2"
  }
}
